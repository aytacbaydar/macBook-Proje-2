modules = ["nodejs-20", "web", "php-8.2"]
run = "node index.js"

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Angular Dev Server"
author = 99479
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd kimyaogreniyorum"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "ng serve --host 0.0.0.0 --port 4200"

[[workflows.workflow]]
name = "PHP Backend Server"
author = 99479
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:8000"

[[workflows.workflow]]
name = "Angular Dev Server HTTPS"
author = 99479
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd kimyaogreniyorum"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "ng serve --ssl --host 0.0.0.0 --port 4200"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Angular Server"

[[workflows.workflow]]
name = "Angular Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd kimyaogreniyorum && npm start"
waitForPort = 5000

[deployment]
run = ["npx", "http-server", "dist/kimyaogreniyorum/browser", "-p", "5000", "-a", "0.0.0.0", "--cors"]
deploymentTarget = "autoscale"
build = ["npm", "run", "build", "--", "--configuration=production"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 35347
externalPort = 3000

[[ports]]
localPort = 38321
externalPort = 3001

[agent]
expertMode = true
