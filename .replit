modules = ["nodejs-20", "web", "php-8.2", "postgresql-16"]
run = "node index.js"

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Angular Dev Server"
author = 99479
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd kimyaogreniyorum"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "ng serve --host 0.0.0.0 --port 4200"

[[workflows.workflow]]
name = "PHP Backend Server"
author = 99479
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:8000"

[[workflows.workflow]]
name = "Angular Dev Server HTTPS"
author = 99479
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd kimyaogreniyorum"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "ng serve --ssl --host 0.0.0.0 --port 4200"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Angular Server"

[[workflows.workflow]]
name = "Angular Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd kimyaogreniyorum && npm run start"
waitForPort = 5000

[deployment]
run = ["npx", "serve", "-s", "dist/kimyaogreniyorum", "-l", "5000"]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 43783
externalPort = 3000

[agent]
expertMode = true
