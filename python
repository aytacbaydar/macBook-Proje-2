# door_controller.py (Raspberry Pi'da çalışacak)
from flask import Flask, request, jsonify
import RPi.GPIO as GPIO
import time

app = Flask(__name__)

# GPIO pin tanımlaması
DOOR_RELAY_PIN = 18
GPIO.setmode(GPIO.BCM)
GPIO.setup(DOOR_RELAY_PIN, GPIO.OUT)
GPIO.output(DOOR_RELAY_PIN, GPIO.LOW)

@app.route('/door', methods=['POST'])
def control_door():
    data = request.get_json()
    
    if data.get('security_token') != 'YOUR_SECURITY_TOKEN':
        return jsonify({'success': False, 'message': 'Unauthorized'}), 401
    
    action = data.get('action')
    classroom = data.get('classroom')
    
    if action == 'open_door':
        # Röleyi aktif et (kapıyı aç)
        GPIO.output(DOOR_RELAY_PIN, GPIO.HIGH)
        return jsonify({
            'success': True, 
            'message': f'{classroom} sınıfı kapısı açıldı'
        })
    
    elif action == 'close_door':
        # Röleyi pasif et (kapıyı kapat)
        GPIO.output(DOOR_RELAY_PIN, GPIO.LOW)
        return jsonify({
            'success': True, 
            'message': f'{classroom} sınıfı kapısı kapatıldı'
        })
    
    return jsonify({'success': False, 'message': 'Invalid action'}), 400

if __name__ == '__main__':
    app.run(host='0.0.0.0', port=5000)